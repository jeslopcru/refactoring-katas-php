{
  "name": "emilybache/supermarket-receipt-refactoring-kata",
  "autoload": {
    "psr-4": {
      "Supermarket\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2",
    "myclabs/php-enum": "^1.7",
    "php-ds/php-ds": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "approvals/approval-tests": "^1.4",
    "phpstan/phpstan": "^0.12.25",
    "phpstan/phpstan-phpunit": "^0.12.8",
    "symplify/easy-coding-standard": "^7.3",
    "symplify/phpstan-extensions": "^7.3"
  },
  "suggest": {
    "ext-ds": "*"
  },
  "scripts": {
    "checkcode": "phpcs src tests --standard=PSR12",
    "fixcode": "phpcbf src tests --standard=PSR12",
    "test": "phpunit",
    "tests": "phpunit",
    "test-coverage": "phpunit --coverage-html build/coverage",
    "check-cs": "ecs check src tests --ansi",
    "fix-cs": "ecs check src tests --fix --ansi",
    "phpstan": "phpstan analyse --ansi"
  },
  "type": "project"
}
